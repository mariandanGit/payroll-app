<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Aplicatie salarizare</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Libraries/tabulator-tables/dist/css/tabulator.min.css" rel="stylesheet" />
    <script src="~/Libraries/tabulator-tables/dist/js/tabulator.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Acasa", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Introducere date <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Adaugare angajati", "AdaugareAngajati", "Home")</li>
                            <li>@Html.ActionLink("Gestionare angajati", "GestionareAngajati", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tiparire <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Stat plata", "StatPlata", "Home")</li>
                            <li>@Html.ActionLink("Fluturasi", "Fluturasi", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Modificare procente", "ModificareProcente", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="display:flex; justify-content:space-between">
            <p>&copy; @DateTime.Now.Year - Aplicatie salarizare</p>
            <p>Ora curenta: <span id="clock"></span></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/table")
    @RenderSection("scripts", required: false)
    <script>
                            $(document).ready(function() {
                                setInterval(function() {
                                    $.ajax({
                                        type: "GET",
                                        url: "@Url.Action("GetServerTime", "Home")",
                                        success: function (data) {
                                            $("#clock").html(data);
                                        }
                                    });
                                }, 1000);
                            });
    </script>
</body>
</html>