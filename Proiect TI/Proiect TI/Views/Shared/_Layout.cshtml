<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Aplicatie salarizare</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Libraries/tabulator-master/dist/css/tabulator_semanticui.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Acasa", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Introducere date <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Adaugare angajati", "AdaugareAngajati", "Home")</li>
                            <li>@Html.ActionLink("Gestionare angajati", "GestionareAngajati", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Modificare procente", "ModificareProcente", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="display:flex; justify-content:space-between">
            <p>&copy; @DateTime.Now.Year - Aplicatie salarizare</p>
            <p>Ora curenta: <span id="clock"></span></p>
        </footer>
    </div>

    <script src="~/Libraries/tabulator-master/dist/js/tabulator.min.js"></script>
    <script src="~/CrystalReports/aspnet_client/system_web/4_0_30319/crystalreportviewers13/js/crviewer/crv.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/table")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('#addEmployeeForm').submit(function (event) {
                event.preventDefault();

                var isValid = true;
                if ($('#Nume').val().trim() == '') {
                    $('#Nume').closest('.form-group').addClass('has-error');
                    $('#NumeError').text('Camp obligatoriu');
                    isValid = false;
                }
                else {
                    $('#Nume').closest('.form-group').removeClass('has-error');
                    $('#NumeError').text('');
                }

                if ($('#Prenume').val().trim() == '') {
                    $('#Prenume').closest('.form-group').addClass('has-error');
                    $('#PrenumeError').text('Camp obligatoriu');
                    isValid = false;
                }
                else {
                    $('#Prenume').closest('.form-group').removeClass('has-error');
                    $('#PrenumeError').text('');
                }

                if ($('#Functie').val().trim() == '') {
                    $('#Functie').closest('.form-group').addClass('has-error');
                    $('#FunctieError').text('Camp obligatoriu');
                    isValid = false;
                }
                else {
                    $('#Functie').closest('.form-group').removeClass('has-error');
                    $('#FunctieError').text('');
                }

                if ($('#SalarBaza').val().trim() == '') {
                    $('#SalarBaza').closest('.form-group').addClass('has-error');
                    $('#SalarBazaError').text('Camp obligatoriu');
                    isValid = false;
                }
                else {
                    $('#SalarBaza').closest('.form-group').removeClass('has-error');
                    $('#SalarBazaError').text('');
                }

                if (isValid) {
                    this.submit();
                }
            });
        });
        $('#employee-form').submit(function (event) {
                event.preventDefault();

                var isValid = true;

                if ($('#employee-modal-nume').val().trim() == '') {
                    $('#employee-modal-nume').closest('.form-group').addClass('has-error');
                    $('#NumeError').text('Camp obligatoriu');
                        isValid = false;
                    }
                else {
                    $('#employee-modal-nume').closest('.form-group').removeClass('has-error');
                    $('#NumeError').text('');
                }

            if ($('#employee-modal-prenume').val().trim() == '') {
                $('#employee-modal-prenume').closest('.form-group').addClass('has-error');
                    $('#PrenumeError').text('Camp obligatoriu');
                    isValid = false;
                }
                else {
                $('#employee-modal-prenume').closest('.form-group').removeClass('has-error');
                    $('#PrenumeError').text('');
                }

            if ($('#employee-modal-functie').val().trim() == '') {
                $('#employee-modal-functie').closest('.form-group').addClass('has-error');
                    $('#FunctieError').text('Camp obligatoriu');
                    isValid = false;
                }
                else {
                $('#employee-modal-functie').closest('.form-group').removeClass('has-error');
                    $('#FunctieError').text('');
                }

            if ($('#employee-modal-salar').val().trim() == '') {
                $('#employee-modal-salar').closest('.form-group').addClass('has-error');
                    $('#SalarBazaError').text('Camp obligatoriu');
                    isValid = false;
                }
                else {
                $('#employee-modal-salar').closest('.form-group').removeClass('has-error');
                    $('#SalarBazaError').text('');
                }

                if (isValid) {
                    this.submit();
                }
            });
    </script>
</body>
</html>