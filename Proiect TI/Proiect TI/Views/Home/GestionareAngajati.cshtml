@model Proiect_TI.Models.EmployeeViewModelSet

<h2>Gestionare angajati</h2>
<p></p>
@if (ViewBag.Success == true)
{
    <div class="alert alert-success text-center">
        Actualizarea s-a realizat cu succes!
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (ViewBag.Success == false)
{
    <div class="alert alert-danger text-center">
        Actualizarea nu s-a realizat!
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="container-fluid" style=" border: solid 1px #dde0de; border-radius: 10px; padding: 30px;">
    <div class="row align-center">
        <div class="col-md-12">
            <div class="container" style="max-width:100%; height:500px;">
                <input type="text" id="search-input" placeholder="Search name...">
                <div id="employee-table"></div>

                <div class="modal fade" id="employee-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">

                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h3 class="modal-title text-center" id="exampleModalLongTitle">Date angajat</h3>
                            </div>
                            <div class="modal-body">

                                @using (Html.BeginForm("UpdateData", "Database", FormMethod.Post, new { id = "employee-form" }))
                                {
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td>Nr. Crt</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.Id, new { id = "employee-modal-id", @Readonly = "readonly" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Nume</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.Nume, new { id = "employee-modal-nume" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Prenume</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.Prenume, new { id = "employee-modal-prenume" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Functie</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.Functie, new { id = "employee-modal-functie" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Salar de baza</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.SalarBaza, new { id = "employee-modal-salar" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Spor</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.Spor, new { id = "employee-modal-spor", type = "number", step = "0.01" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Premii brute</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.PremiiBrute, new { id = "employee-modal-premii-brute" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Total brut</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.TotalBrut, new { id = "employee-modal-total-brut" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Brut impozabil</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.BrutImpozabil, new { id = "employee-modal-brut-impozabil" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Impozit</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.Impozit, new { id = "employee-modal-impozit" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>CAS</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.Cas, new { id = "employee-modal-cas" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>CASS</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.Cass, new { id = "employee-modal-cass" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Retineri</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.Retineri, new { id = "employee-modal-retineri" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Virat card</td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.ViratCard, new { id = "employee-modal-virat-card" })
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Inchidere</button>
                                        <button type="submit" class="btn btn-primary" id="save-btn">Salvare</button>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>

